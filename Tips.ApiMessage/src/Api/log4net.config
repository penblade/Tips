<log4net>
  <root>
    <level value="ALL" />
    <appender-ref ref="file" />
  </root>
  <appender name="file" type="log4net.Appender.RollingFileAppender">
    <file value="..\..\..\..\..\logs\Tips.ApiMessage.log" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="5" />
    <maximumFileSize value="10MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %level | Scope: %property{Api.Scope} | Logger: %logger%newlineTraceParentId: %property{Api.TraceParentId} | TraceParentStateString: %property{Api.TraceParentStateString}%newlineTraceId:       %property{Api.TraceId} | TraceStateString:       %property{Api.TraceStateString}%newline%message%newline%exception%newline" />
    </layout>
  </appender>
</log4net>